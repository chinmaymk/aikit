{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["ES2020"],
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    "tsBuildInfoFile": "./dist/.tsbuildinfo",
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "@chinmaymk/aikit": ["./src/index.ts"],
      "@chinmaymk/aikit/*": ["./src/*"]
    },
    "strict": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["src/**/*", "scripts/**/*", "examples/**/*", "tests/**/*"],
  "exclude": ["node_modules", "dist"]
}
